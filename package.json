{
  "name": "srihash.org",
  "version": "0.2.0",
  "description": "Subresource Integrity attribute generator",
  "author": "Francois Marier <francois@mozilla.com>",
  "license": "MPL-2.0",
  "homepage": "https://www.srihash.org/",
  "private": true,
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla/srihash.org.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla/srihash.org/issues"
  },
  "scripts": {
    "copyright": "node build/copyright.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dev": "npm run watch",
    "stylelint": "stylelint \"public/**/*.css\" --cache --cache-location node_modules/.cache/.stylelintcache",
    "xo": "xo .",
    "lint": "npm-run-all --continue-on-error --parallel stylelint xo",
    "mocha": "mocha",
    "server": "node ./index.js",
    "start": "cross-env NODE_ENV=production npm run server",
    "test": "npm-run-all --parallel copyright lint --sequential mocha",
    "travis": "nyc npm test",
    "watch": "nodemon --ext css,js,html --exec \"npm run server\""
  },
  "dependencies": {
    "@hapi/hapi": "^18.3.1",
    "@hapi/inert": "^5.2.1",
    "@hapi/vision": "^5.5.2",
    "cross-env": "^5.2.0",
    "handlebars": "^4.1.2",
    "handlebars-helper-sri": "0.0.0",
    "node-fetch": "^2.6.0",
    "sri-toolbox": "^0.2.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.5",
    "glob": "^7.1.4",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "xo": "^0.24.0"
  },
  "engines": {
    "node": "10.x"
  },
  "nyc": {
    "include": [
      "lib"
    ]
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "capitalized-comments": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-destructuring": [
        "error",
        {
          "object": true,
          "array": false
        }
      ],
      "quote-props": [
        "error",
        "consistent"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ],
      "unicorn/no-process-exit": "off"
    },
    "overrides": [
      {
        "files": "test/*.js",
        "envs": [
          "mocha"
        ]
      }
    ]
  }
}
